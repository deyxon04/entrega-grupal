{{>header}}
<table>
            <thead>
               <th>Documento</th> 
               <th>Nombre</th> 
               <th>Correo</th>
               <th>Telefono</th>
               <th>Tipo</th> 
            </thead>
            <tbody>
                {{#mostrarusuarios this}}
                    <tr>
                      <td>{{documento}}</td> 
                      <td>{{nombre}}</td>
                      <td>{{correo}}</td>
                      <td>{{telefono}}</td>
