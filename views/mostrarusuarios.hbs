                      <td><button type="submit" name="boton" value={{documento}}+{{tipo}} class="btn btn-danger">Cambiar rol</button></td></tr>
                      </form>
                    </tr>
                {{/mostrarusuarios}}
            </tbody>
        </table>
{{>footer}}